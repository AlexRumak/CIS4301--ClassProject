<!doctype HTML>
<html lalng="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Action Page</title>

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="../css/bootstrap.css">
        <link rel="stylesheet" href="../css/bootstrap-theme.css">

        <link rel="stylesheet" href="../css/style.css">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>


<style>
    .card {
    background-color: white;
    float: top;
    margin-bottom: 100px;
    border: 1px solid darkgray; 
    box-shadow: 0 10px 5px black;
    font-size: 16px;
    font-weight: bold;
    color: grey;       
}
    
    .qtext {
    font-family: "Georgia Bold Italic";
}
</style>


    <body>

        <%- include banner.ejs %>
        
        <h1 style="margin-bottom: .4em;">What do you wish to do today?</h1> 
        <div class="container">
            <div class="row">

                <!-- Search by county -->
                <div class="col-md-4">
                    <div class="thumbnail card">
                        <img src="img/countymap.gif" alt="Florida County Map" width=200px height=200px>
                        <div class="caption">
                            <h3 class="qtext">Search by County</h3> 
                        </div>
                    </div>
                </div>

                <!-- Show statistics -->
                <div class="col-md-4">
                    <div class="thumbnail card">
                        <img src="img/graph.png" alt="Line graph clip art" width=200px height=300px>
                        <div class="caption">
                            <h3 class="qtext">Show statistics</h3> 
                        </div>
                    </div>
                </div>

                <!-- Search something else -->
                <div class="col-md-4">
                    <div class="thumbnail card">
                        <a href="/search"><img src="img/criminal.jpg" alt="Criminal Clipart" width=200px height=200px></a>
                        <div class="caption">
                            <h3 class="qtext">Search something</h3>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </body>
</html>
